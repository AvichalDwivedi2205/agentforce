# Multi-Agent System Environment Configuration

# Required: OpenRouter API Key for LLM functionality
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Site Configuration (Optional - for OpenRouter rankings)
SITE_URL=https://localhost:3000
SITE_NAME=Multi-Agent System

# Gmail Integration (Optional - needed for Gmail agent functionality)
# Get these from Google Cloud Console OAuth2 setup
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here
GMAIL_ACCESS_TOKEN=your_gmail_access_token_here

# Research Tools
PERPLEXITY_API_KEY=your_perplexity_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Presentation Generation (Required for presentation feature)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# LangSmith (Optional - for debugging and monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# Agent Configuration (Optional)
DEFAULT_LLM_MODEL=anthropic/claude-3.5-sonnet
AGENT_TEMPERATURE=0.2
MAX_ITERATIONS=5